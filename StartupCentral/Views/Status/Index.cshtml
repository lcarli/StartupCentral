@model IEnumerable<StartupCentral.Models.Status>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGL.cshtml";
    bool lineColor = true;
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Lista de Status <small>status</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    @Html.ActionLink("Adicionar Nova", "Create")
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            @*<th>
                                    <input type="checkbox" id="check-all" class="flat">
                                </th>*@
                            <th class="column-title">Nome </th>
                            <th class="column-title no-link last">
                                <span class="nobr">Action</span>
                            </th>
                            <th class="bulk-actions" colspan="11">
                                <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (lineColor)
                            {
                                lineColor = !lineColor;
                                <tr class="even pointer">
                                    @*<td class="a-center ">
                                            <input type="checkbox" class="flat" name="table_records">
                                        </td>*@
                                    <td class=" ">@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td class=" last">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.StatusId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.StatusId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.StatusId })
                                   </td>
                                </tr>
                            }
                            else
                            {
                                lineColor = !lineColor;
                                <tr class="odd pointer">
                                    @*<td class="a-center ">
                                            <input type="checkbox" class="flat" name="table_records">
                                        </td>*@
                                    <td class=" ">@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td class=" last">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.StatusId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.StatusId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.StatusId })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <!-- FastClick -->
    <script src="../vendors/fastclick/lib/fastclick.js"></script>
    <!-- iCheck -->
    <script src="~Content/vendors/iCheck/icheck.min.js"></script>
}
